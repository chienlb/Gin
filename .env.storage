# S3/MinIO Configuration
STORAGE_TYPE=s3                # s3 or minio
STORAGE_ENDPOINT=              # For MinIO: http://localhost:9000
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY_ID=your-access-key
STORAGE_SECRET_ACCESS_KEY=your-secret-key
STORAGE_BUCKET=gin-demo-uploads
STORAGE_USE_PATH_STYLE=false  # true for MinIO
STORAGE_CDN_DOMAIN=            # Optional: https://cdn.yourdomain.com

# Worker Configuration
WORKER_ENABLED=false
WORKER_COUNT=5
WORKER_QUEUE_SIZE=100

# Service Discovery Configuration
DISCOVERY_ENABLED=false
DISCOVERY_TYPE=kubernetes      # kubernetes or consul
CONSUL_ADDR=localhost:8500
SERVICE_NAME=gin-demo-api
SERVICE_ID=gin-demo-api-1
SERVICE_PORT=8080
SERVICE_TAGS=api,v1

# Database Read Replicas (comma-separated)
DB_READ_REPLICAS=
